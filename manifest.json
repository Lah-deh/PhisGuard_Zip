{
  "manifest_version": 3,
  "name": "PhishGuard Auto Detector",
  "version": "1.0",
  "description": "Detects phishing websites using a cloud-based ML model before they load.",
  "permissions": ["tabs", "scripting", "webNavigation"],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "PhishGuard",
    "default_popup": "pop.html"

  }
}
